@model CmsWeb.Areas.Main.Models.Report.EnrollmentControlModel
<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/css/jquery.mobile-1.3.1.min.css" rel="stylesheet" />
    <script src="~/Scripts/jQuery/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/Mobile/jquery.mobile-1.3.1.min.js"></script>
    <script src="~/Scripts/Org/enroll-control-ipad.js"></script>
</head>
<body>
    <div data-role="page" id="foo">

        <div data-role="header">
            <h1>Enrollment Control</h1>
        </div>
        <div data-role="content">
            <p>When you click the button below, you will be taken to the search page.</p>
            <p>Tap on that page to display the keyboard. Then type the first letter of the last name you are searching for. The list will be filtered.</p>
            <p>Once you type the letter, the keyboard will disappear and your list will be filtered. Just tap again to do another search.</p>
            <p><a href="#searchpage" data-role="button">Go to the next page to get started</a></p>
        </div>
        <div data-role="footer">
            <h4>Brought to you by BVCMS</h4>
        </div>
    </div>
    <div data-role="page" id="searchpage">
        <div data-role="content" class="ui-content" role="main">
            <ul data-role="listview" class="ui-listview">
                <li id="search" class="ui-li ui-li-static ui-btn-u-c">
                    <input type="text" /></li>
                @foreach (var a in Model.list())
                {
                    <li class="ui-li ui-li-static ui-btn-up-c ckline @a.Name[0]">
                        <div class="ui-grid-b">
                            <div class="ui-block-a" style="width: 40%">@a.Name</div>
                            <div class="ui-block-b" style="width: 25%">@a.Location</div>
                            <div class="ui-block-c" style="width: 35%">@a.Organization</div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</body>
</html>
