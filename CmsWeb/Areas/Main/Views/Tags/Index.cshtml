@using CmsWeb.Models
@using CmsWeb
@model TagsModel
@{
	ViewBag.Title = "Tags";
	Layout = "~/Views/Shared/SiteLayout.cshtml";
}
@section scripts
{
    <script type="text/javascript" src="@Fingerprint.Tag("/Scripts/Dialog/SearchUsers.js")"></script>
    <script type="text/javascript" src="@Fingerprint.Tag("/Scripts/js/Tags.js")"></script>
}
<form id="managetags" method="post" action="/Tags/Index">
    <div class="roundbox floatleft">
        <h2>Tag List</h2>
        <table cellspacing="5">
            <tr>
                <th class="right"> Change Active Tag: </th>
                <td>@Html.Partial("Tags")&nbsp;&nbsp;
                    <a id="delete" href="/Tags/Delete" confirm="are you sure?" class="bt">Delete Tag</a></td>
            </tr>
            <tr>
                <th class="right top"> New Tag Name:</th>
                <td> @Html.TextBox("tagname", Model.tagname, new { title="no colon characters" }) </td>
            </tr>
            <tr>
                <td class="top" class="right" colspan="2">
                    <a id="ShareLink" href="/Tags/SharedTags" data-target="#usersDialog" class="bt">Shared with <span id="sharecount">@Model.SharedCount()</span> users</a>
                    <a id="makenew" class="bt" href="#">Make New Tag</a>
                    <a id="rename" class="bt" href="#">Rename Tag</a>
                    <a id="refresh" class="bt" href="/Tags/Results">Refresh</a>
                    <div>@Html.ValidationMessage("name")</div></td>
            </tr>
        </table>
    </div>
    <div class="floatclear"></div>
@Html.Partial("ExportToolBar")
    @Html.Partial("Results", Model)
</form>