@model CmsWeb.Areas.People.Models.Person.EmailInfo
<div class="control-group">
    @Html.LabelFor(m=> m, new { @class = "control-label nwrap"})
    <div class="controls">
        <p>
            @Model.Address
            @* todo: use help text *@
            @if (Model.Send)
            {
                <i class="icon-check"></i>
            }
            else
            {
                <i class="icon-check-empty"></i>
            }
        </p>
    </div>
</div>
