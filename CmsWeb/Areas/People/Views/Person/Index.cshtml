@using CmsWeb
@using CmsWeb.Models
@using CmsData
@using UtilityExtensions
@model CmsWeb.Areas.People.Models.Person.PersonModel
@{
    Layout = "/Views/Shared/SiteLayout2.cshtml";
    ViewBag.Title = "Person";
    Bundles.Reference("main2");
    Bundles.Reference("person12");
    Bundles.Reference("OrgMemberDialog");
}
@section head
{
    <link href="~/Content/css/person.css" rel="stylesheet" />
    <script src="http://use.edgefonts.net/asap.js"></script>
}
@Html.Hidden("newlook", "true")
@Html.Hidden("PeopleId", Model.displayperson.PeopleId)

<div class="container">
    <div class="row-fluid">
        <div class="span3">
            <div id="sidebar">
                @Html.Partial("FamilyGrid", Model)
                @Html.Partial("Addresses", Model)
                @Html.Partial("RelatedFamilies", Model)
            </div>
        </div>
        <div class="span9">
            <div class="row-fluid">
                <div class="span12" id="profile-header">
                    <div class="span8">
                        @Html.Partial("Snapshot", Model.displayperson)
                    </div>
                    <div class="span4" id="profile-actions">
                        @Html.Partial("Toolbar", Model)
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="tabbable">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#personal" data-toggle="tab">Personal</a></li>
                            <li><a id="currentLink" href="#enrollment" data-toggle="tab">Involvement</a></li>
                            <li><a href="#profile" data-toggle="tab">Member Profile</a></li>
                            <li><a href="#giving" data-toggle="tab">Giving</a></li>
                            <li><a href="#account" data-toggle="tab">Account</a></li>
                            <li><a href="#comments" data-toggle="tab">Comments</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active" id="personal">
                                <form class="form form-horizontal DisplayEdit">
                                    @Html.Partial("BasicPersonInfoDisplay", Model.displayperson.basic)
                                </form>
                            </div>
                            <div class="tab-pane fade" id="enrollment">
                                <ul class="nav nav-tabs subnav">
                                    <li class="active"><a href="#current" data-toggle="tab">Current</a></li>
                                    <li><a id="previousLink" href="#previous" data-toggle="tab">Previous</a></li>
                                    <li><a id="pendingLink" href="#pending" data-toggle="tab">Pending</a></li>
                                    <li><a href="#attends" data-toggle="tab">Attendance</a></li>
                                    <li><a href="#registrations" data-toggle="tab">Registrations</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="current">
                                        <form action="/Person2/EnrollGrid/@Model.displayperson.PeopleId">
                                        </form>
                                    </div>
                                    <div class="tab-pane" id="previous">
                                        <form action="/Person2/PrevEnrollGrid/@Model.displayperson.PeopleId">
                                        </form>
                                    </div>
                                    <div class="tab-pane" id="pending">
                                        <form action="/Person2/EnrollGrid/@Model.displayperson.PeopleId">
                                        </form>
                                    </div>
                                    <div class="tab-pane" id="attends">
                                        <form action="/Person2/EnrollGrid/@Model.displayperson.PeopleId">
                                        </form>
                                    </div>
                                    <div class="tab-pane" id="registrations">
                                        <h2>Registrations</h2>
                                        <form action="/Person2/EnrollGrid/@Model.displayperson.PeopleId">
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="profile">
                                <h2>Profile tab</h2>
                            </div>
                            <div class="tab-pane" id="giving">
                                <h2>Giving tab</h2>
                            </div>
                            <div class="tab-pane" id="account">
                                <h2>Account tab</h2>
                            </div>
                            <div class="tab-pane" id="comments">
                                <h2>Comments</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
