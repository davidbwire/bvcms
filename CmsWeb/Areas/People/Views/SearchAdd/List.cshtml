@using CmsWeb.Areas.People.Models
@model SearchAddModel
<form class="ajax">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Pending Selection List</h3>
    </div>
    <div class="modal-body">
        <a class="helplink" target="_blank" href='@Model.HelpLink("List")'>help</a>
        @Html.Partial("HiddenSearch", Model)
        @Html.Partial("HiddenPeople", Model)
        @Html.Partial("DisplayPeople", Model)
    </div>
    <div class="modal-footer">
        <a class="btn" data-dismiss="modal">Cancel</a>
        @if (!Model.OnlyOne)
        {
            <a href="/SearchAdd2/ListNext/AnotherSearch" class="btn ajax">Another Search</a> @:or 
            if (Model.CanAdd)
            { 
            <a href="/SearchAdd2/ListNext/LastFamily" class="btn ajax">Add to Last Family</a> @:or 
            }
        }
        <a href="/SearchAdd2/ListNext/CommitAdd" class="btn btn-primary commit ajax">Commit and Add</a>
    </div>
</form>
