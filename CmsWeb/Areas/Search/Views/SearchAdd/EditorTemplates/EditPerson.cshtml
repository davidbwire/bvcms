@model CmsWeb.Areas.Search.Models.SearchPersonModel
@{
    var noShowCampusDropdown = (new string[] { "org", "pending", "visitor", "registered" }).Contains(Model.context);
}
@Html.EditorFor(m => m.GoesBy)
@Html.EditorFor(m => m.First)
@Html.EditorFor(m => m.Middle)
@Html.EditorFor(m => m.Last)
@Html.EditorFor(m => m.Suffix)
@Html.EditorFor(m => m.Title)
@Html.EditorFor(m => m.dob)
@Html.EditorFor(m => m.Phone)
@Html.EditorFor(m => m.Email)
@Html.EditorFor(m => m.Gender)
@Html.EditorFor(m => m.Marital)
@if (noShowCampusDropdown)
{
    @Html.DisplayFor(m => m.Campus)
    @Html.DisplayFor(m => m.EntryPoint)
}
else
{
    @Html.EditorFor(m => m.Campus)
    @Html.EditorFor(m => m.EntryPoint)
}
